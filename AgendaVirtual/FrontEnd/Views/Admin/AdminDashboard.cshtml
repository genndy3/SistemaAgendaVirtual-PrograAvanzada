@{
    ViewData["Title"] = "Admin";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Timely</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .icon-container {
            text-align: center;
            width: 200px; 
        }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            background-color: #162a6a;
            color: white;
        }

        .icon-container img {
            width: 200px; 
            height: 200px; 
            object-fit: contain; 
        }
    </style>
</head>
<body>
    <div class="d-flex flex-row mb-3 p-3 align-items-center flex-wrap">
        <div class="p-2" style="width: 80px; max-width: 100%; flex-shrink: 0;">
            <img src="\img\timely_logo.png" class="img-fluid" alt="Timely Logo">
        </div>

        <div class="p-2">
            <h1 class="mt-2 text-center text-sm-start">TIMELY</h1>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="d-flex flex-row mb-3 p-3 align-items-center flex-wrap">

            <div class="icon-container p-2">
                <a href="@Url.Action("admUsuarios", "Admin")" style="text-decoration: none; color: inherit;">
                    <img src="\img\user.png" alt="Usuarios">
                    <h5>Usuarios</h5>
                </a>
            </div>

            <div class="icon-container p-2">
                <a href="@Url.Action("admEquipos", "Admin")" style="text-decoration: none; color: inherit;">
                    <img src="\img\equipo.png" alt="Equipo">
                    <h5>Equipos</h5>
                </a>
            </div>

            <div class="icon-container p-2">
                <a href="@Url.Action("admTareas", "Admin")" style="text-decoration: none; color: inherit;">
                    <img src="\img\tasks.png" alt="Tareas">
                    <h5>Tareas</h5>
                </a>
            </div>

        </div>
    </div>

    <footer class="text-center p-2" style="background-color: #162a6a; color: white;">
        <p>&copy; 2025 - Derechos Reservados</p>
    </footer>
</body>
</html>

